div.swiper-container 
  div.swiper-wrapper
    each slideData in sliderData.slides
      if slideData.type=='image'
        include components/imageSlide.pug
      if slideData.type=='video'
        include components/videoSlide.pug
      if slideData.type=='contact'
        include components/contactSlide.pug
      if slideData.type=='lottie'
        include components/lottieSlide.pug
  div.slider__bottomText
    p='Press spacebar / arrows'
    img.inline-svg(src="./assets/images/components/keyboard.svg")